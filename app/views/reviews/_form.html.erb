<div class="wrapper">
  <%= form_for @review do |f| %>
    <%= f.hidden_field :user_id, value: @current_user.id %>
    <%= f.hidden_field :business_id, value: @business.id %>
		<%= f.number_field :rating %><br>
    <%= f.text_area :comment, placeholder: "leave review here" %><br>
    <%= f.submit "post review" %>
  <% end %>
</div>
