<p id=”alert”><%= alert %></p>
<h1>Login </h1><br>

<div class="wrapper">
  <%= form_tag sessions_path do |form| %>
      <div class=”field”>
        <%= label_tag :email %>
        <%= text_field_tag :email, placeholder: "Email" %><br>
      </div>

      <div class=”field”>
      <%= label_tag :password %>
      <%= password_field_tag :password,  placeholder: "Password" %><br>
      </div>

     <div class=”actions”>
    <%= submit_tag "Login" %>
    </div>
  <% end %>
  <br>

  <p> Don't have an account? <%= link_to "Sign Up", new_user_path%>
</div>
